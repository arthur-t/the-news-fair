<br>
<div class="container justify-content-center">
    <div class="jumbotron ">
        <div class="row ">
            <div class="col-xs-12 w-100">

                <h2 >Add a new article</h2>
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error}}
                    </div>
                {% endif %}
                {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.description) }}
                <input type="hidden" name="_target_path" value="/index" />
                <br>
                <button type="submit" class="btn btn-primary" >Add article<span class="fa fa-lock"></span></button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

</div>





