<nav aria-label="...">
    <ul class="pagination">
        {% if page <=1 %}


        <li class="page-item active">
            <a class="page-link" href="#">1<span class="sr-only">(current)</span></a>
        </li>
        <li class="page-item disabled">
            <a class="page-link" >...<span class="sr-only"></span></a>
        </li>
        <li class="page-item"><a class="page-link" href="{{ path('index',{'page': maxPage }) }}">{{ maxPage }}</a></li>
        <li class="page-item">
            <a class="page-link" href="{{ path('index',{'page': page + 1 }) }}" >Next</a>
        </li>

        {% elseif page >= maxPage %}
        <li class="page-item">
            <a class="page-link" href="{{ path('index',{'page': page - 1 }) }}" >Previous</a>
        </li>

        <li class="page-item ">
            <a class="page-link" href="{{ path('index',{'page': 1 }) }}">1</a>
        </li>
        <li class="page-item disabled">
            <a class="page-link" >...<span class="sr-only"></span></a>
        </li>
        <li class="page-item active"><a class="page-link" >{{ maxPage }}<span class="sr-only">(current)</span></a></li>

        {%  else %}

            <li class="page-item">
                <a class="page-link" href="{{ path('index',{'page': page - 1 }) }}" >Previous</a>
            </li>

            <li class="page-item">
                <a class="page-link" href="{{ path('index',{'page': 1 }) }}">1</a>
            </li>

            {% if page>2 %}
            <li class="page-item disabled">
                <a class="page-link" >...<span class="sr-only"></span></a>
            </li>
            {% endif %}

            <li class="page-item active">
                <a class="page-link" >{{ page }}<span class="sr-only">(current)</span></a>
            </li>

            {% if page<maxPage-1 %}
            <li class="page-item disabled">
                <a class="page-link" >...<span class="sr-only"></span></a>
            </li>
            {% endif %}

            <li class="page-item"><a class="page-link" href="{{ path('index',{'page': maxPage }) }}">{{ maxPage }}</a></li>

            <li class="page-item">
                <a class="page-link" href="{{ path('index',{'page': page + 1 }) }}" >Next</a>
            </li>

        {% endif %}
    </ul>
</nav>