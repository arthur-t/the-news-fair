{% extends 'base.html.twig' %}
{% block body %}
    {{ include('navigation/navigation_bar_login.html.twig')}}

    <div class="page-centered">
        <div class="jumbotron p-5 bg-lightblue">
                <div class=" row ">
                    <div class="col-xs-12">

                        <h2 >Please enter your credentials</h2>
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        {{ form_start(form) }}
                        {{ form_row(form._username) }}
                        {{ form_row(form._password) }}
                        <input type="hidden" name="_target_path" value="/index" />
                        <br>
                        <button type="submit" class="btn btn-block btn-primary" >Login <span class="fa fa-lock"></span></button>
                        {{ form_end(form) }}
                    </div>
                </div>
        </div>

    </div>
{% endblock %}

